<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <title>Add Tenant</title>
</head>
<body>
    <!-- Success Message -->
    <div class="success-message">
        Authorization successful! Add your tenant below:
    </div>

    <!-- Form Container -->
    <div class="container">
        <h2>Add Tenant</h2>
        <form action="/addtenant/<%= id %>" method="POST" enctype="multipart/form-data" onsubmit="return validateTenantForm()">
            
            <!-- Tenant Name -->
            <label for="name">Tenant Name:</label>
            <input type="text" id="name" name="name" required>
            <small id="nameError" class="error-message"></small>

            <!-- Phone Number -->
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" required>
            <small id="phoneNumberError" class="error-message"></small>

            <!-- Property Selection -->
            <label for="propertyName">Property:</label>
            <select id="propertyName" name="propertyName" required>
                <% properties.forEach(function(property) { %>
                    <option value="<%= property._id %>"><%= property.name %></option>
                <% }) %>
            </select>
            <small id="propertyError" class="error-message"></small>

            <!-- Unit Selection -->
            <label for="unitAssigned">Unit:</label>
            <select id="unitAssigned" name="unitAssigned" required>
                <% units.forEach(function(unit) { %>
                    <option value="<%= unit._id %>"><%= unit.unitNumber %> (Property: <%= unit.property %>)</option>
                <% }) %>
            </select>
            <small id="unitError" class="error-message"></small>

            <!-- Lease Start Date -->
            <label for="lease_start">Lease Start Date:</label>
            <input type="date" id="lease_start" name="lease_start" required>
            <small id="leaseStartError" class="error-message"></small>

            <!-- Deposit -->
            <label for="deposit">Deposit Amount:</label>
            <input type="number" id="deposit" name="deposit" required min="0">
            <small id="depositError" class="error-message"></small>

            <!-- Rent Amount -->
            <label for="rent_amount">Rent Amount:</label>
            <input type="number" id="rent_amount" name="rent_amount" required min="0">
            <small id="rentAmountError" class="error-message"></small>

            <!-- Tenant ID -->
            <label for="tenant_id">Tenant ID:</label>
            <input type="text" id="tenant_id" name="tenant_id" required>
            <small id="tenantIdError" class="error-message"></small>

            <!-- Photo Upload -->
            <label for="photo">Photo (Max 5MB):</label>
            <input type="file" id="photo" name="photo" required accept="image/*">
            <small id="photoError" class="error-message"></small>

            <!-- ID Proof Upload -->
            <label for="idProof">ID Proof (Max 5MB):</label>
            <input type="file" id="idProof" name="idProof" required accept="image/*">
            <small id="idProofError" class="error-message"></small>

            <!-- Submit Button -->
            <button type="submit">Add Tenant</button>
        </form>
    </div>

    <!-- JavaScript for validation -->
    <script>
        function validateTenantForm() {
            const name = document.getElementById('name').value;
            const phoneNumber = document.getElementById('phoneNumber').value;
            const deposit = document.getElementById('deposit').value;
            const rentAmount = document.getElementById('rent_amount').value;
            const tenantId = document.getElementById('tenant_id').value;
            const photo = document.getElementById('photo').files[0];
            const idProof = document.getElementById('idProof').files[0];

            let valid = true;

            document.getElementById('nameError').innerHTML = "";
            document.getElementById('phoneNumberError').innerHTML = "";
            document.getElementById('depositError').innerHTML = "";
            document.getElementById('rentAmountError').innerHTML = "";
            document.getElementById('tenantIdError').innerHTML = "";
            document.getElementById('photoError').innerHTML = "";
            document.getElementById('idProofError').innerHTML                = "";

            // Name validation
            if (name.trim() === "") {
                document.getElementById('nameError').innerHTML = "Tenant name is required.";
                valid = false;
            }

            // Phone Number validation
            if (phoneNumber.trim() === "" || isNaN(phoneNumber)) {
                document.getElementById('phoneNumberError').innerHTML = "Please enter a valid phone number.";
                valid = false;
            }

            // Deposit validation
            if (isNaN(deposit) || deposit < 0) {
                document.getElementById('depositError').innerHTML = "Please enter a valid deposit amount.";
                valid = false;
            }

            // Rent Amount validation
            if (isNaN(rentAmount) || rentAmount <= 0) {
                document.getElementById('rentAmountError').innerHTML = "Please enter a valid rent amount.";
                valid = false;
            }

            // Tenant ID validation
            if (tenantId.trim() === "") {
                document.getElementById('tenantIdError').innerHTML = "Tenant ID is required.";
                valid = false;
            }

            // Photo validation
            if (photo && photo.size > 5 * 1024 * 1024) {
                document.getElementById('photoError').innerHTML = "Photo size cannot exceed 5MB.";
                valid = false;
            }

            // ID Proof validation
            if (idProof && idProof.size > 5 * 1024 * 1024) {
                document.getElementById('idProofError').innerHTML = "ID Proof size cannot exceed 5MB.";
                valid = false;
            }

            return valid;
        }
    </script>
</body>
</html>

