<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="/styles.css" />
  <title>Add Tenant</title>
</head>
<body>
  <div class="container">
    <h2>Add Tenant</h2>
    <form action="/addtenant/<%= id %>" method="POST" enctype="multipart/form-data">
      
      <!-- Tenant Name -->
      <label for="name">Tenant Name:</label>
      <input type="text" id="name" name="name" required />

      <!-- Random Tenant ID (read-only) -->
      <label for="tenant_id">Tenant ID:</label>
      <input type="text" id="tenant_id" name="tenant_id" value="<%= tenantId %>" readonly />

      <!-- Property Name -->
      <label for="propertyName">Property Name:</label>
      <select id="propertyName" name="propertyName" required>
        <% properties.forEach(function(property) { %>
          <option value="<%= property.name %>"><%= property.name %></option>
        <% }); %>
      </select>

      <!-- Unit Assignment (displaying only unit numbers) -->
<label for="unitAssigned">Unit Assigned:</label>
<select id="unitAssigned" name="unitAssigned" required>
  <% units.forEach(function(unit) { %>
    <option value="<%= unit._id %>"><%= unit.unitNumber %></option>
  <% }); %>
</select>


      <!-- Lease Start Date -->
      <label for="lease_start">Lease Start:</label>
      <input type="date" id="lease_start" name="lease_start" required />

      <!-- Deposit -->
      <label for="deposit">Deposit:</label>
      <input type="number" id="deposit" name="deposit" required />

      <!-- Rent Amount -->
      <label for="rent_amount">Rent Amount:</label>
      <input type="number" id="rent_amount" name="rent_amount" required />

      <!-- Tenant Photo -->
      <label for="photo">Tenant Photo (Max 5MB):</label>
      <input type="file" id="photo" name="photo" accept="image/*" required />

      <!-- ID Proof -->
      <label for="idProof">ID Proof (Max 5MB):</label>
      <input type="file" id="idProof" name="idProof" accept="image/*" required />

      <button type="submit">Submit</button>
    </form>
  </div>
</body>
</html>
