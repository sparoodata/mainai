<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Tenant</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    h1 { color: #333; }
    form { margin-top: 20px; }
    label, input, select { display: block; margin: 10px 0; }
    input, select { padding: 8px; width: 200px; }
    button { padding: 10px; background-color: #007bff; color: white; border: none; cursor: pointer; }
    button:hover { background-color: #0056b3; }
  </style>
</head>
<body>
  <h1>Add Tenant</h1>
  <form action="/addtenant/<%= id %>" method="POST" enctype="multipart/form-data">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required>

    <label for="propertyName">Property Name:</label>
    <select name="propertyName" id="propertyName" required>
      <option value="">-- Select Property --</option>
      <% properties.forEach(property => { %>
        <option value="<%= property.name %>"><%= property.name %></option>
      <% }) %>
    </select>

    <label for="unitAssigned">Unit Assigned:</label>
    <select name="unitAssigned" id="unitAssigned" required>
      <option value="">-- Select Unit --</option>
      <% units.forEach(unit => { %>
        <% const property = properties.find(p => p._id.toString() === unit.property.toString()); %>
        <option value="<%= unit.unitNumber %>">
          <%= unit.unitNumber %> (Property: <%= property ? property.name : 'Unknown' %>)
        </option>
      <% }) %>
    </select>

    <label for="lease_start">Lease Start Date:</label>
    <input type="date" name="lease_start" id="lease_start" required>

    <label for="deposit">Deposit:</label>
    <input type="number" name="deposit" id="deposit" required>

    <label for="rent_amount">Rent Amount:</label>
    <input type="number" name="rent_amount" id="rent_amount" required>

    <label for="tenant_id">Tenant ID (optional):</label>
    <input type="text" name="tenant_id" id="tenant_id">

    <label for="photo">Photo:</label>
    <input type="file" name="photo" id="photo" accept="image/*">

    <label for="idProof">ID Proof:</label>
    <input type="file" name="idProof" id="idProof" accept="image/*">

    <button type="submit">Add Tenant</button>
  </form>
</body>
</html>