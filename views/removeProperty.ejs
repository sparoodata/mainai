<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <title>Remove Property</title>
</head>
<body>
    <!-- Success Message -->
    <div class="success-message">
        Authorization successful!
    </div>

    <!-- Form Container -->
    <div class="container">
        <h2>Remove Property</h2>
        <form action="/deleteproperty/<%= id %>" method="POST" onsubmit="return validateForm()">
            
            <!-- Property Selection -->
            <label for="propertyId">Select Property to Remove:</label>
            <select name="propertyId" id="propertyId" required>
                <option value="">-- Select a Property --</option>
                <% properties.forEach(property => { %>
                    <option value="<%= property._id %>"><%= property.name %> - <%= property.address %></option>
                <% }) %>
            </select>
            <small id="propertyIdError" class="error-message"></small>

            <!-- Submit Button -->
            <button type="submit">Remove Property</button>
        </form>
    </div>

    <!-- Script for Validation -->
    <script>
        function validateForm() {
            // Get form field
            const propertyId = document.getElementById('propertyId').value;

            let valid = true;

            // Clear previous error message
            document.getElementById('propertyIdError').innerHTML = "";

            // Property ID validation
            if (!propertyId) {
                document.getElementById('propertyIdError').innerHTML = "Please select a property to remove.";
                valid = false;
            }

            return valid;
        }
    </script>
</body>
</html>