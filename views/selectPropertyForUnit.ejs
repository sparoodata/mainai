<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Property for Unit</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    select { padding: 10px; width: 100%; max-width: 300px; }
    h1 { font-size: 24px; }
  </style>
</head>
<body>
  <h1>Select a Property</h1>
  <form action="/editunit/<%= id %>?propertyId=" method="get">
    <label for="property">Choose a property to edit units:</label><br>
    <select name="propertyId" id="property" onchange="this.form.action='/editunit/<%= id %>?propertyId=' + this.value; this.form.submit();" required>
      <option value="">--Select Property--</option>
      <% properties.forEach(property => { %>
        <option value="<%= property._id %>"><%= property.name %> - <%= property.address %></option>
      <% }); %>
    </select>
  </form>
</body>
</html>