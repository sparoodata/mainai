<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <title>Edit Tenant</title>
</head>
<body>
    <!-- Success Message -->
    <div class="success-message">
        Authorization successful!
    </div>

    <!-- Form Container -->
    <div class="container">
        <h2>Edit Tenant: <%= tenant.name %></h2>
        <form action="/edittenant/<%= id %>" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
            <input type="hidden" name="tenantId" value="<%= tenant._id %>">

            <!-- Name -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" maxlength="50" value="<%= tenant.name %>" required>
            <small id="nameError" class="error-message"></small>

            <!-- Property Name -->
            <label for="propertyName">Property Name:</label>
            <select name="propertyName" id="propertyName" required>
                <option value="">-- Select Property --</option>
                <% properties.forEach(property => { %>
                    <option value="<%= property.name %>" <%= tenant.propertyName === property.name ? 'selected' : '' %>>
                        <%= property.name %>
                    </option>
                <% }) %>
            </select>
            <small id="propertyNameError" class="error-message"></small>

            <!-- Unit Assigned -->
            <label for="unitAssigned">Unit Assigned:</label>
            <select name="unitAssigned" id="unitAssigned" required>
                <option value="">-- Select Unit --</option>
                <% units.forEach(unit => { %>
                    <option value="<%= unit._id %>" <%= tenant.unitAssigned.toString() === unit._id.toString() ? 'selected' : '' %>>
                        <%= unit.unitNumber %> (<%= unit.unit_id %>)
                    </option>
                <% }) %>
            </select>
            <small id="unitAssignedError" class="error-message"></small>

            <!-- Lease Start Date -->
            <label for="lease_start">Lease Start Date:</label>
            <input type="date" id="lease_start" name="lease_start" value="<%= tenant.lease_start.toISOString().split('T')[0] %>" required>
            <small id="leaseStartError" class="error-message"></small>

            <!-- Deposit -->
            <label for="deposit">Deposit:</label>
            <input type="number" id="deposit" name="deposit" value="<%= tenant.deposit %>" required min="0">
            <small id="depositError" class="error-message"></small>

            <!-- Rent Amount -->
            <label for="rent_amount">Rent Amount:</label>
            <input type="number" id="rent_amount" name="rent_amount" value="<%= tenant.rent_amount %>" required min="0">
            <small id="rentAmountError" class="error-message"></small>

            <!-- Photo -->
            <label for="photo">Update Photo (Max 5MB):</label>
            <input type="file" id="photo" name="photo" accept="image/*">
            <small id="photoError" class="error-message"></small>

            <!-- ID Proof -->
            <label for="idProof">Update ID Proof (Max 5MB):</label>
            <input type="file" id="idProof" name="idProof" accept="image/*">
            <small id="idProofError" class="error-message"></small>

            <!-- Submit Button -->
            <button type="submit">Update Tenant</button>
        </form>
    </div>

    <!-- Script for Validation -->
    <script>
        function validateForm() {
            // Get form fields
            const name = document.getElementById('name').value;
            const propertyName = document.getElementById('propertyName').value;
            const unitAssigned = document.getElementById('unitAssigned').value;
            const leaseStart = document.getElementById('lease_start').value;
            const deposit = document.getElementById('deposit').value;
            const rentAmount = document.getElementById('rent_amount').value;
            const photo = document.getElementById('photo').files[0];
            const idProof = document.getElementById('idProof').files[0];

            let valid = true;

            // Clear previous error messages
            document.getElementById('nameError').innerHTML = "";
            document.getElementById('propertyNameError').innerHTML = "";
            document.getElementById('unitAssignedError').innerHTML = "";
            document.getElementById('leaseStartError').innerHTML = "";
            document.getElementById('depositError').innerHTML = "";
            document.getElementById('rentAmountError').innerHTML = "";
            document.getElementById('photoError').innerHTML = "";
            document.getElementById('idProofError').innerHTML = "";

            // Name validation
            if (name.length > 50) {
                document.getElementById('nameError').innerHTML = "Name cannot exceed 50 characters.";
                valid = false;
            }

            // Property Name validation
            if (!propertyName) {
                document.getElementById('propertyNameError').innerHTML = "Please select a property.";
                valid = false;
            }

            // Unit Assigned validation
            if (!unitAssigned) {
                document.getElementById('unitAssignedError').innerHTML = "Please select a unit.";
                valid = false;
            }

            // Lease Start Date validation
            if (!leaseStart) {
                document.getElementById('leaseStartError').innerHTML = "Please enter a lease start date.";
                valid = false;
            }

            // Deposit validation
            if (isNaN(deposit) || deposit < 0) {
                document.getElementById('depositError').innerHTML = "Please enter a valid deposit amount.";
                valid = false;
            }

            // Rent Amount validation
            if (isNaN(rentAmount) || rentAmount < 0) {
                document.getElementById('rentAmountError').innerHTML = "Please enter a valid rent amount.";
                valid = false;
            }

            // Photo validation (Max size 5MB, optional)
            if (photo && photo.size > 5 * 1024 * 1024) {
                document.getElementById('photoError').innerHTML = "Photo size cannot exceed 5MB.";
                valid = false;
            }

            // ID Proof validation (Max size 5MB, optional)
            if (idProof && idProof.size > 5 * 1024 * 1024) {
                document.getElementById('idProofError').innerHTML = "ID Proof size cannot exceed 5MB.";
                valid = false;
            }

            return valid;
        }
    </script>
</body>
</html>