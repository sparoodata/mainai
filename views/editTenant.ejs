<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Tenant</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    h1 { color: #333; }
    form { margin-top: 20px; }
    label, input, select { display: block; margin: 10px 0; }
    input, select { padding: 8px; width: 200px; }
    button { padding: 10px; background-color: #007bff; color: white; border: none; cursor: pointer; }
    button:hover { background-color: #0056b3; }
  </style>
</head>
<body>
  <h1>Edit Tenant</h1>
  <form action="/edittenant/<%= id %>" method="POST" enctype="multipart/form-data">
    <label for="tenantId">Select Tenant:</label>
    <select name="tenantId" id="tenantId" required onchange="populateFields(this)">
      <option value="">-- Select Tenant --</option>
      <% tenants.forEach(tenant => { %>
        <option value="<%= tenant._id %>"
                data-name="<%= tenant.name %>"
                data-property-name="<%= tenant.propertyName %>"
                data-unit-assigned="<%= tenant.unitAssigned %>"
                data-lease-start="<%= tenant.lease_start.toISOString().split('T')[0] %>"
                data-deposit="<%= tenant.deposit %>"
                data-rent-amount="<%= tenant.rent_amount %>">
          <%= tenant.name %> (Unit: <%= tenant.unitAssigned %>)
        </option>
      <% }) %>
    </select>

    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required>

    <label for="propertyName">Property Name:</label>
    <select name="propertyName" id="propertyName" required>
      <option value="">-- Select Property --</option>
      <% properties.forEach(property => { %>
        <option value="<%= property.name %>"><%= property.name %></option>
      <% }) %>
    </select>

    <label for="unitAssigned">Unit Assigned:</label>
<select name="unitAssigned">
  <% units.forEach(unit => { %>
    <option value="<%= unit._id %>" <%= tenant.unitAssigned.toString() === unit._id.toString() ? 'selected' : '' %>>
      <%= unit.unitNumber %> (<%= unit.unit_id %>)
    </option>
  <% }); %>
</select>

    <label for="lease_start">Lease Start Date:</label>
    <input type="date" name="lease_start" id="lease_start" required>

    <label for="deposit">Deposit:</label>
    <input type="number" name="deposit" id="deposit" required>

    <label for="rent_amount">Rent Amount:</label>
    <input type="number" name="rent_amount" id="rent_amount" required>

    <label for="photo">Update Photo:</label>
    <input type="file" name="photo" id="photo" accept="image/*">

    <label for="idProof">Update ID Proof:</label>
    <input type="file" name="idProof" id="idProof" accept="image/*">

    <button type="submit">Update Tenant</button>
  </form>

  <script>
    function populateFields(select) {
      const selectedOption = select.options[select.selectedIndex];
      document.getElementById('name').value = selectedOption.getAttribute('data-name') || '';
      document.getElementById('propertyName').value = selectedOption.getAttribute('data-property-name') || '';
      document.getElementById('unitAssigned').value = selectedOption.getAttribute('data-unit-assigned') || '';
      document.getElementById('lease_start').value = selectedOption.getAttribute('data-lease-start') || '';
      document.getElementById('deposit').value = selectedOption.getAttribute('data-deposit') || '';
      document.getElementById('rent_amount').value = selectedOption.getAttribute('data-rent-amount') || '';
    }
  </script>
</body>
</html>