<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <title>Add Property</title>
</head>
<body>
    <!-- Success Message -->
    <div class="success-message">
        Authorization successful! 
    </div>

    <!-- Form Container -->
    <div class="container">
        <h2>Add Property</h2>
        <form action="/addproperty/<%= id %>" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
            
            <!-- Property Name -->
            <label for="property_name">Property Name:</label>
            <input type="text" id="property_name" name="property_name" maxlength="50" required>
            <small id="propertyNameError" class="error-message"></small>

            <!-- Number of Units -->
            <label for="units">Number of Units:</label>
            <input type="number" id="units" name="units" required min="1">
            <small id="unitsError" class="error-message"></small>

            <!-- Address -->
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" maxlength="80" required>
            <small id="addressError" class="error-message"></small>

            <!-- Total Amount -->
            <label for="totalAmount">Total Amount:</label>
            <input type="number" id="totalAmount" name="totalAmount" required min="0">
            <small id="totalAmountError" class="error-message"></small>

            <!-- Property Image -->
            <label for="image">Property Image (Max 5MB):</label>
            <input type="file" id="image" name="image" required accept="image/*">
            <small id="imageError" class="error-message"></small>

            <!-- Submit Button -->
            <button type="submit" id="submitBtn">Submit</button>
        </form>
    </div>

    <!-- Script for Validation -->
    <script>
        function validateForm() {
            // Get form fields
            const propertyName = document.getElementById('property_name').value;
            const units = document.getElementById('units').value;
            const address = document.getElementById('address').value;
            const totalAmount = document.getElementById('totalAmount').value;
            const image = document.getElementById('image').files[0];
            const submitBtn = document.getElementById('submitBtn');

            let valid = true;

            // Clear previous error messages
            document.getElementById('propertyNameError').innerHTML = "";
            document.getElementById('unitsError').innerHTML = "";
            document.getElementById('addressError').innerHTML = "";
            document.getElementById('totalAmountError').innerHTML = "";
            document.getElementById('imageError').innerHTML = "";

            // Property Name validation
            if (propertyName.length > 50) {
                document.getElementById('propertyNameError').innerHTML = "Property name cannot exceed 50 characters.";
                valid = false;
            }

            // Number of Units validation
            if (isNaN(units) || units <= 0) {
                document.getElementById('unitsError').innerHTML = "Please enter a valid number of units.";
                valid = false;
            }

            // Address validation
            if (address.length > 80) {
                document.getElementById('addressError').innerHTML = "Address cannot exceed 80 characters.";
                valid = false;
            }

            // Total Amount validation
            if (isNaN(totalAmount) || totalAmount <= 0) {
                document.getElementById('totalAmountError').innerHTML = "Please enter a valid total amount.";
                valid = false;
            }

            // Image validation (Max size 5MB)
            if (image && image.size > 5 * 1024 * 1024) {
                document.getElementById('imageError').innerHTML = "Image size cannot exceed 5MB.";
                valid = false;
            }

            // Disable submit button if the form is valid
            if (valid) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'Submitting...'; // Change button text to indicate submission
            }

            return valid;
        }
    </script>
</body>
</html>
