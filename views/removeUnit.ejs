<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Remove Unit</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      color: #333;
    }
    form {
      margin-top: 20px;
    }
    select, button {
      padding: 10px;
      margin: 5px 0;
      font-size: 16px;
    }
    button {
      background-color: #ff4444;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background-color: #cc0000;
    }
  </style>
</head>
<body>
  <h1>Remove Unit</h1>
  <form action="/deleteunit/<%= id %>" method="POST">
    <label for="unitId">Select Unit to Remove:</label><br>
    <select name="unitId" id="unitId" required>
      <option value="">-- Select a Unit --</option>
      <% units.forEach(unit => { %>
        <% const property = properties.find(p => p._id.toString() === unit.property.toString()); %>
        <option value="<%= unit._id %>">
          <%= unit.unitNumber %> (Property: <%= property ? property.name : 'Unknown' %>)
        </option>
      <% }) %>
    </select><br>
    <button type="submit">Remove Unit</button>
  </form>
</body>
</html>