<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <title>Remove Unit</title>
</head>
<body>
    <!-- Success Message -->
    <div class="success-message">
        Authorization successful!
    </div>

    <!-- Form Container -->
    <div class="container">
        <h2>Remove Unit</h2>
        <form action="/deleteunit/<%= id %>" method="POST" onsubmit="return validateForm()">
            
            <!-- Unit Selection -->
            <label for="unitId">Select Unit to Remove:</label>
            <select name="unitId" id="unitId" required>
                <option value="">-- Select a Unit --</option>
                <% units.forEach(unit => { %>
                    <% const property = properties.find(p => p._id.toString() === unit.property.toString()); %>
                    <option value="<%= unit._id %>">
                        <%= unit.unitNumber %> (Property: <%= property ? property.name : 'Unknown' %>)
                    </option>
                <% }) %>
            </select>
            <small id="unitIdError" class="error-message"></small>

            <!-- Submit Button -->
            <button type="submit">Remove Unit</button>
        </form>
    </div>

    <!-- Script for Validation -->
    <script>
        function validateForm() {
            // Get form field
            const unitId = document.getElementById('unitId').value;

            let valid = true;

            // Clear previous error message
            document.getElementById('unitIdError').innerHTML = "";

            // Unit ID validation
            if (!unitId) {
                document.getElementById('unitIdError').innerHTML = "Please select a unit to remove.";
                valid = false;
            }

            return valid;
        }
    </script>
</body>
</html>