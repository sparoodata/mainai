<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Unit</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h2>Edit Unit</h2>
    <form action="/editunit/<%= unit._id %>" method="POST">
      <label for="property">Property:</label>
      <select id="property" name="property" required>
        <% properties.forEach(function(prop) { %>
          <option value="<%= prop._id %>" <%= prop._id.toString() === unit.property.toString() ? "selected" : "" %>>
            <%= prop.name %>
          </option>
        <% }) %>
      </select>

      <label for="unit_number">Unit Number:</label>
      <input type="text" id="unit_number" name="unit_number" value="<%= unit.unitNumber %>" required />

      <label for="rent_amount">Rent Amount:</label>
      <input type="number" id="rent_amount" name="rent_amount" value="<%= unit.rentAmount %>" required />

      <label for="floor">Floor:</label>
      <input type="number" id="floor" name="floor" value="<%= unit.floor %>" required />

      <label for="size">Size (sq ft):</label>
      <input type="number" id="size" name="size" value="<%= unit.size %>" required />

      <button type="submit">Update Unit</button>
    </form>
  </div>
</body>
</html>
