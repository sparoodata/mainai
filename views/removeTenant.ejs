<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <title>Remove Tenant</title>
</head>
<body>
    <!-- Success Message -->
    <div class="success-message">
        Authorization successful!
    </div>

    <!-- Form Container -->
    <div class="container">
        <h2>Remove Tenant</h2>
        <form action="/deletetenant/<%= id %>" method="POST" onsubmit="return validateForm()">
            
            <!-- Tenant Selection -->
            <label for="tenantId">Select Tenant to Remove:</label>
            <select name="tenantId" id="tenantId" required>
                <option value="">-- Select a Tenant --</option>
                <% tenants.forEach(tenant => { %>
                    <option value="<%= tenant._id %>">
                        <%= tenant.name %> (Unit: <%= tenant.unitAssigned %>)
                    </option>
                <% }) %>
            </select>
            <small id="tenantIdError" class="error-message"></small>

            <!-- Submit Button -->
            <button type="submit">Remove Tenant</button>
        </form>
    </div>

    <!-- Script for Validation -->
    <script>
        function validateForm() {
            // Get form field
            const tenantId = document.getElementById('tenantId').value;

            let valid = true;

            // Clear previous error message
            document.getElementById('tenantIdError').innerHTML = "";

            // Tenant ID validation
            if (!tenantId) {
                document.getElementById('tenantIdError').innerHTML = "Please select a tenant to remove.";
                valid = false;
            }

            return valid;
        }
    </script>
</body>
</html>